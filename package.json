{
    "name": "ripieno",
    "version": "0.0.1",
    "description": "A music notation app for web and iOS",
    "main": "./src/main.jsx",
    "dependencies": {
        "react": "~0.11.1",
        "react-bootstrap": "~0.11.1",
        "lodash": "~2.4.1",
        "react-router-component": "git://github.com/parshap/react-router-component",
        "es6-promise": ">= 1.0.0",
        "midi": "http://nettek.ca/midi-0.3.0.tgz",
        "node-jsx": "~0.11.0",
        "express": "~4.8.2",
        "body-parser": "~1.6.2",
        "audio5": "0.1.9"
    },
    "devDependencies": {
        "browserify": "~4.1.5",
        "browserify-shader": "http://nettek.ca/browserify-shader.tar.gz",
        "envify": "~1.2.1",
        "jisonify": "~1.0.4",
        "mocha": "~1.21.4",
        "mochify": "~1.0.2",
        "node-lessify": "~0.0.3",
        "react-tools": "~0.11.1",
        "reactify": "~0.14.0",
        "statics": "~0.1.0",
        "typescriptifier": "^1.0.0",
        "uglify-js": "~2.4.14",
        "uglifyjs": "~2.3.6",
        "watchify": "~0.10.1"
    },
    "scripts": {
        "dev-server": "watchify --extension .ts -o build/browser-bundle.js -v -d . & nginx -c'./nginx.conf' -p ./nginx/",
        "lrc-watchify": "watchify -v -o build/lrc-bundle.js -d ./src/lrc-helper.jsx --noparse lodash",
        "build": "NODE_ENV=production browserify . | uglifyjs -cm > build/browser-bundle.js",
        "collect-static": "collect-static . ./static",
        "test": "mochify --watch --extension .ts --node $(find ./src | grep 'test/' | grep .jsx$)",
        "chore": "NODE_ENV=production browserify --extension .ts --bare ./src/lyToSvg.js --noparse lodash --noparse ./src/browserifySrv.js | uglifyjs -cm 2>/dev/null | node"
    },
    "author": "Josh Netterfield",
    "license": "(C) Josh Netterfield 2014. All rights reserved.",
    "browserify": {
        "transform": [
            ["typescriptifier", {"extension": [".ts"]}],
            ["reactify", {"es6": true}],
            "node-lessify",
            "jisonify",
            ["browserify-shader", {"extensions": ["vs", "fs"]}]
        ]
    }
}
